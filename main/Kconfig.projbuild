menu "Project configuration"

config MIN_BRIGHTNESS
    int "Minimum backlight brightness (%)"
    default 25
    range 0 100

config MAX_BRIGHTNESS
    int "Maximum backlight brightness (%)"
    default 100
    range 0 100

config BRIGHTNESS_HYSTERESIS
    int "Brightness change threshold (%)"
    default 5
    range 0 100

config BRIGHTNESS_GAMMA_X100
    int "Gamma correction factor (x100)"
    default 220
    range 1 1000

config BG_TASK_DELAY_MS
    int "Background task delay (ms)"
    default 1000

config WIFI_SSID
    string "WiFi SSID"
    default ""

config WIFI_PASSWORD
    string "WiFi Password"
    default ""

config WIFI_PROV_TIMEOUT_MS
    int "WiFi provisioning timeout (ms)"
    default 60000

config UPLOAD_MAX_BYTES
    int "Maximum upload size (bytes)"
    default 1048576

config UPLOAD_AUTH_TOKEN
    string "Upload Authorization token"
    default ""

endmenu


menu "Display options"
    config DISPLAY_WIDTH
        int "Display width in pixels"
        default 1024
    config DISPLAY_HEIGHT
        int "Display height in pixels"
        default 600
    config DISPLAY_MARGIN_LEFT
        int "Left margin in pixels"
        default 120
    config DISPLAY_MARGIN_RIGHT
        int "Right margin in pixels"
        default 120
    config DISPLAY_MARGIN_TOP
        int "Top margin in pixels"
        default 0
    config DISPLAY_MARGIN_BOTTOM
        int "Bottom margin in pixels"
        default 0
    choice DISPLAY_ORIENTATION
        prompt "Display orientation"
        default DISPLAY_ORIENTATION_LANDSCAPE
        config DISPLAY_ORIENTATION_LANDSCAPE
            bool "Landscape"
        config DISPLAY_ORIENTATION_PORTRAIT
            bool "Portrait"
    endchoice
endmenu

menu "Power management options"
    config INACTIVITY_TIMEOUT_MS
        int "Inactivity timeout before light sleep (ms)"
        default 60000
endmenu

